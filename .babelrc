{
    "env": {
        "development": {
            "sourceMaps": true,
            "presets": ["next/babel"],
            "plugins": [
                [
                    "@babel/plugin-proposal-decorators",
                    { "legacy": true }
                ],
                [
                    "@babel/plugin-proposal-class-properties",
                    { "loose": false }
                ],
                [
                    "@emotion",
                    { "labelFormat": "_[dirname]-[local]" }
                ]
            ]
        },
        "production": {
            "presets": ["next/babel"],
            "plugins": [
                [
                    "@babel/plugin-proposal-decorators",
                    { "legacy": true }
                ],
                [
                    "@babel/plugin-proposal-class-properties",
                    { "loose": false }
                ],
                [
                    "@emotion",
                    { "autoLabel": "never" }
                ]
            ]
        }
    }
}
